= form_for @product, :url => product_path(@product), :html => { :multipart => true } do |p|
	= p.label :name 
	= p.text_field :name
	= p.label :description 
	= p.text_area :description
	= humanized_money_with_symbol p.label :price
	= p.text_field :price
	= p.file_field :product_image
	= p.submit 'Update'